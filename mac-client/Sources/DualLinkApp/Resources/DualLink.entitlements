<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Screen Recording permission â€” ScreenCaptureKit -->
    <key>NSScreenCaptureUsageDescription</key>
    <string>DualLink needs screen recording access to capture your display and stream it to your Linux machine.</string>

    <!-- Network access for WebRTC / signaling -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Bonjour / mDNS browsing -->
    <key>NSBonjourServices</key>
    <array>
        <string>_duallink._tcp</string>
    </array>
</dict>
</plist>
